---
import Layout from "../layouts/Layout.astro";
import FlechaBoton from '../components/FlechaBoton.astro';
const BASE_URL = import.meta.env.VITE_BASE_URL || '';
---

<Layout>
    <main class="min-h-screen relative">
      <div
        class="absolute inset-0 bg-cover bg-center z-0"
        style={`background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('${BASE_URL}/puente1.webp');`}>
        
        <!-- Contenedor izquierdo (50% ancho) -->
        <div class="relative z-10 w-1/2 min-h-full p-8">
          <!-- Contenedor centrado (dentro del 50%) -->
          <div class="h-full flex flex-col justify-center items-center">
            <!-- Botones (mitad del ancho del título y centrados) -->
            <nav class="w-1/2 flex flex-col items-center space-y-6">
              <FlechaBoton texto="Agregar Registro" href={`${BASE_URL}/crud/personas/agregar`}/>
              
              <FlechaBoton texto="Mostrar Registro" href={`${BASE_URL}/crud/personas/listar`}/>
              
              <FlechaBoton texto="Agregar Muchos Registros" href={`${BASE_URL}/crud/personas/agregar_muchos`}/>
              
              <div x-data="{ message: '¡Alpine funciona!' }" x-text="message"></div>
            </nav>
          </div>
        </div>
      </div>
    </main>
</Layout>