---
import Layout from "../layouts/Layout.astro";
import FlechaBoton from '../components/FlechaBoton.astro';
const BASE_URL = import.meta.env.VITE_BASE_URL || '';
---

<Layout>
  <main class="min-h-screen relative">
    <!-- Fondo -->
    <div
      class="absolute inset-0 bg-cover bg-center z-0"
      style={`background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('${BASE_URL}/puente1.webp');`}
    ></div>

    <!-- Contenido centrado encima -->
    <div class="relative z-10 flex items-center justify-center min-h-screen p-8">
      <nav class="w-1/3 flex flex-row items-center justify-center space-x-6">
        <FlechaBoton texto="Agregar Registro" href={`${BASE_URL}/crud/personas/agregar`} /> 
        <FlechaBoton texto="Mostrar Registro" href={`${BASE_URL}/crud/personas/listar`} />
      </nav>
    </div>
  </main>
</Layout>
