---
import FlechaBoton from "../components/FlechaBoton.astro";
import Layout from "../layouts/Layout.astro";
const BASE_URL = import.meta.env.VITE_BASE_URL || '';
---

<Layout>
  <main class="h-screen w-full flex flex-col items-center justify-center bg-gradient-to-br from-gray-800 to-gray-800 overflow-hidden relative">
    
    <!-- Fondo oscuro -->
    <div class="absolute inset-0 bg-gray-800 bg-opacity-40 z-0"></div>

    <!-- Contenedor del logo con el "404" encima -->
    <div class="relative z-0 flex items-center justify-center">
      <img src="logoo.png" class="max-w-xs md:max-w-sm object-contain" alt="logo" />
      
      <!-- Texto 404 encima del logo -->
      <div class="absolute text-6xl md:text-7xl font-bold text-red-600 drop-shadow-lg"> 404 </div>
    </div>

    <!-- Texto restante debajo del logo -->
    <section class="relative z-10 text-center p-8 max-w-2xl mx-auto mt-0">
      <h2 class="text-2xl md:text-3xl font-bold text-red-600 drop-shadow-md mb-4">Lo lamentamos, esta página no existe </h2>

      <p class="text-lg text-black-500 font-bold mb-8">Parece que has seguido un enlace incorrecto o la página aún no ha sido creada.
    </p>

      <FlechaBoton texto="Volver al inicio" href={`${BASE_URL}/`} />
    </section>

  </main>
</Layout>
