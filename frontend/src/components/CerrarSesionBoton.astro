<div x-data="{ logout: async function() {  <!-- Define la función directamente en x-data -->
    try {
        window.location.href = `${window.BASE_URL}login`;
        }
    catch (error) {
            console.error('Error al cerrar sesión');
        }
    }
}
">
    <!-- Vincula el evento click al método logout() -->
    <button 
        @click="logout()" 
        class="px-4 py-2 rounded-lg bg-transparent hover:bg-white hover:text-black transition-colors duration-300"
    >
        Cerrar Sesión
    </button>
</div>

