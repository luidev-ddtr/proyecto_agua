<script>
  // 1. Importar como módulo
  import Alpine from 'alpinejs';
  
  // 2. Inicializar después de que el DOM cargue
  document.addEventListener('DOMContentLoaded', () => {
    window.Alpine = Alpine;
    Alpine.start();
    console.log('Alpine iniciado correctamente');
  });
</script>

